<?xml version="1.0" encoding="utf-8"?>
<schemalist>
  <schema id="@APP_ID@" path="@APP_PATH@">
    <key name="start-in-background" type="b">
      <default>false</default>
      <summary>Start in background</summary>
      <description>Whether to start the application in the background.</description>
    </key>
    <key name="close-button-action" type="s">
      <default>'background'</default>
      <summary>Action to take when close button is clicked</summary>
      <description>Action to take when close button is clicked (background, quit).</description>
    </key>
    <key name="systray-icon" type="s">
      <default>'auto'</default>
      <summary>System Tray Icon</summary>
      <description>System tray icon behavior (auto, enabled, disabled).</description>
    </key>
    <key name="run-on-startup" type="b">
      <default>false</default>
      <summary>Run on startup</summary>
      <description>Whether to start the application automatically when the user logs in.</description>
    </key>
    <key name="window-width" type="i">
      <default>800</default>
      <summary>Window width</summary>
      <description>Last window width</description>
    </key>
    <key name="window-height" type="i">
      <default>600</default>
      <summary>Window height</summary>
      <description>Last window height</description>
    </key>
    <key name="is-maximized" type="b">
      <default>false</default>
      <summary>Window maximized state</summary>
      <description>Whether the window is maximized</description>
    </key>
    <key name="zoom-level" type="d">
      <default>1.0</default>
      <summary>Zoom level</summary>
      <description>The zoom level of the webview.</description>
    </key>
    <key name="theme" type="s">
      <default>'system'</default>
      <summary>Theme</summary>
      <description>Application theme (system, light, dark).</description>
    </key>
    <key name="mobile-layout" type="s">
      <default>'auto'</default>
      <summary>Mobile Layout (Experimental)</summary>
      <description>Mobile layout mode: auto (detect environment), enabled, or disabled.</description>
    </key>
    <key name="enable-spell-checking" type="b">
      <default>true</default>
      <summary>Enable spell checking</summary>
    </key>
    <key name="auto-detect-language" type="b">
      <default>true</default>
      <summary>Auto-detect language</summary>
    </key>
    <key name="enable-auto-correct" type="b">
      <default>true</default>
      <summary>Enable auto-correct</summary>
    </key>
    <key name="spell-checking-languages" type="as">
      <default>[]</default>
      <summary>Enabled spell checking languages</summary>
    </key>
    <key name="download-directory" type="s">
      <default>''</default>
      <summary>Download directory</summary>
    </key>
    <key name="enable-developer-tools" type="b">
      <default>false</default>
      <summary>Enable developer tools</summary>
    </key>
    <key name="enable-multi-account" type="b">
      <default>false</default>
      <summary>Enable multi-account support</summary>
      <description>Whether to show the account switcher button in the header bar.</description>
    </key>
    <key name="account-limit-enabled" type="b">
      <default>true</default>
      <summary>Enable account limit</summary>
      <description>Whether to limit the number of accounts that can be created.</description>
    </key>
    <key name="account-limit" type="i">
      <default>2</default>
      <summary>Maximum number of accounts</summary>
      <description>The maximum number of accounts when the account limit is enabled (1-10).</description>
    </key>
    <!-- Accessibility -->
    <key name="enable-shortcuts" type="b">
      <default>true</default>
      <summary>Enable keyboard shortcuts</summary>
    </key>
    <key name="focus-indicators" type="b">
      <default>false</default>
      <summary>Enable focus indicators</summary>
    </key>
    <key name="high-contrast" type="b">
      <default>false</default>
      <summary>High contrast mode</summary>
    </key>
    <key name="reduce-motion" type="b">
      <default>false</default>
      <summary>Reduce motion</summary>
    </key>
    <key name="webview-zoom" type="b">
      <default>false</default>
      <summary>Enable webview zoom</summary>
    </key>
    <key name="screen-reader-opts" type="b">
      <default>false</default>
      <summary>Screen reader optimizations</summary>
    </key>
    <key name="a11y-shortcuts" type="b">
      <default>true</default>
      <summary>Enable accessibility shortcuts</summary>
    </key>
    <key name="dev-shortcuts" type="b">
      <default>true</default>
      <summary>Enable developer shortcuts</summary>
    </key>
    <key name="notify-shortcuts" type="b">
      <default>true</default>
      <summary>Enable notification shortcuts</summary>
    </key>
    <!-- Notifications -->
    <key name="notifications-enabled" type="b">
      <default>true</default>
      <summary>Master notification toggle</summary>
    </key>
    <key name="notify-messages" type="b">
      <default>true</default>
      <summary>Message notifications</summary>
    </key>
    <key name="notify-tray-icon" type="b">
      <default>true</default>
      <summary>Change tray icon on new message</summary>
    </key>
    <key name="notify-sound-enabled" type="b">
      <default>false</default>
      <summary>Enable notification sounds</summary>
    </key>
    <key name="notify-sound-file" type="s">
      <default>'default'</default>
      <summary>Notification sound file</summary>
    </key>
    <key name="notify-downloads-enabled" type="b">
      <default>true</default>
      <summary>Enable download notifications</summary>
    </key>
    <key name="notify-download-type" type="s">
      <default>'toast'</default>
      <summary>Download notification type</summary>
      <description>toast or system</description>
    </key>
    <key name="notify-preview-enabled" type="b">
      <default>true</default>
      <summary>Show message preview</summary>
    </key>
    <key name="notify-preview-limit-enabled" type="b">
      <default>false</default>
      <summary>Limit message preview size</summary>
    </key>
    <key name="notify-preview-length" type="i">
      <default>20</default>
      <summary>Message preview length</summary>
    </key>
  </schema>
</schemalist>
