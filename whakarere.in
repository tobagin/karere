#!/bin/bash
# Main executable script for Whakarere
# This file is generated by meson from whakarere.in

PYTHON="@PYTHON@"
INSTALLED_PYTHONPATH="@INSTALLED_PYTHONPATH@"

echo "DEBUG: whakarere script starting"
echo "DEBUG: PYTHON=$PYTHON"
echo "DEBUG: INSTALLED_PYTHONPATH=$INSTALLED_PYTHONPATH"

# Set up Python path for installed version
export PYTHONPATH="$INSTALLED_PYTHONPATH:$PYTHONPATH"

echo "DEBUG: PYTHONPATH=$PYTHONPATH"

# Run the application
echo "DEBUG: Running: $PYTHON -m whakarere.main"
exec "$PYTHON" -m whakarere.main "$@"